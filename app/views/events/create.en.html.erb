<h1>Create new Joomen</h1>

<!-- Rounded Box -->
<%= start_roundedBox(240) %>

<%= form_for(:event, :url => {:action => :create}, :html => {:id=>"new_joomen"}) do |f| %>
    <label for="event_name">Name*</label>
    <%= f.text_field :name %>
 
    <%= cust_submit("new_joomen", "next") %>

<% end %>

<%= end_roundedBox(240) %>


<p>
  *Please enter a name for your common event.<br />
  For instance: dinner, Raclette, hike, group work, excursion, ...
</p>





