<!-- Rounded Box -->
<%= start_roundedBox(240) %>

<%= form_for(:event, :url => {:action => :create}, :html => {:id=>"new_joomen"}) do |f| %>
    <%= f.label(:name, "Name*") %>
    <%= f.text_field :name %>

    <div id="pw_input">
      <%= f.label(:password, "Passwort wÃ¤hlen") %>
      <%= f.text_field :password %>

      <%= f.label(:email, "Email-Adresse") %>
